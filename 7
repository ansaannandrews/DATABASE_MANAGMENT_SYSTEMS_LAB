SELECT *
FROM STUDENT;

SELECT AVG(SPHYSICS)
FROM STUDENT;

SELECT MAX(SMATHEMATICS) AS highest_marks_maths
FROM STUDENT;

SELECT MIN(SCHEMISTRY) AS lowest_mark_chemistry
FROM STUDENT;

SELECT COUNT(*)
FROM STUDENT
WHERE SPHYSICS>=12;

SELECT * FROM STUDENT WHERE SPHYSICS>=12 AND SCHEMISTRY>=12 AND SMATHEMATICS>=25;

SELECT SROLLNUMBER,
       SNAME,
       SPHYSICS,
       SCHEMISTRY,
       SMATHEMATICS,
       (SPHYSICS + SCHEMISTRY + SMATHEMATICS) AS TOTAL_MARKS,
       CASE
          WHEN SPHYSICS >= 12 AND SCHEMISTRY >= 12 AND SMATHEMATICS >= 25    
          THEN 'Pass'
          ELSE 'Fail'
       END AS RESULT
FROM STUDENT
ORDER BY TOTAL_MARKS DESC;

SELECT (COUNT(SMATHEMATICS))/10*100
FROM STUDENT
WHERE SMATHEMATICS>=25;

SELECT ROUND(
    (COUNT(CASE WHEN SPHYSICS >= 12 AND SCHEMISTRY >= 12 AND SMATHEMATICS >= 25 THEN 1 END) * 100.0) / COUNT(*), 2
) AS overall_pass_percentage
FROM STUDENT;

SELECT AVG(SPHYSICS + SCHEMISTRY + SMATHEMATICS) AS class_average
FROM STUDENT;

SELECT COUNT(*)
FROM STUDENT
WHERE SPHYSICS >= 12
  AND SCHEMISTRY >= 12
  AND SMATHEMATICS >= 25;
